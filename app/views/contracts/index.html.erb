<p id="notice"><%= notice %></p>

<h1>Contracts</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Company</th>
      <th>Start at</th>
      <th>Contract type</th>
      <th>End at</th>
      <th>Position</th>
      <th>Brute month salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.employee %></td>
        <td><%= contract.company %></td>
        <td><%= contract.start_at %></td>
        <td><%= contract.contract_type %></td>
        <td><%= contract.end_at %></td>
        <td><%= contract.position %></td>
        <td><%= contract.brute_month_salary %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

