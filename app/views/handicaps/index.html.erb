<p id="notice"><%= notice %></p>

<h1>Handicaps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Cause</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @handicaps.each do |handicap| %>
      <tr>
        <td><%= handicap.name %></td>
        <td><%= handicap.description %></td>
        <td><%= handicap.cause %></td>
        <td><%= handicap.employee %></td>
        <td><%= link_to 'Show', handicap %></td>
        <td><%= link_to 'Edit', edit_handicap_path(handicap) %></td>
        <td><%= link_to 'Destroy', handicap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

