<%= form_for(:session, url: login_path) do |form| %>
  <div class="form-group">
    <%= form.label "Login ou Adresse email", for: "session_email", class: 'control-label' %>
    <%= form.text_field :email, class: 'form-control' , placeholder:"Adresse email", autocomplete: 'off' %>
  </div>
  <div class="form-group">
      <%= form.label "Mot de passe", for: "session_password", class: 'control-label' %>
      <%= form.password_field :password, class: 'form-control', placeholder: "Mot de passe" %>
  </div>

  <div class="form-group">
    <%= form.label :remember_me, class: "checkbox inline" do %>
      <%= form.check_box :remember_me %>
      <span>Se souvenir de moi sur cet ordinateur</span>
    <% end %>
  </div>

  <div class="actions">
     <%= form.submit "Connexion", class: "btn btn-primary" %>
  </div>


<% end %>

<p>Nouvel utilisateur? <%= link_to 'Inscrivez-vous maintenant!', signup_path %></p>