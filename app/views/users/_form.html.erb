<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, id: :user_username %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :password_digest %>
    <%= form.text_field :password_digest, id: :user_password_digest %>
  </div>

  <div class="field">
    <%= form.label :confirmation_token %>
    <%= form.text_field :confirmation_token, id: :user_confirmation_token %>
  </div>

  <div class="field">
    <%= form.label :confirmed_at %>
    <%= form.datetime_select :confirmed_at, id: :user_confirmed_at %>
  </div>

  <div class="field">
    <%= form.label :confirmation_sent_at %>
    <%= form.datetime_select :confirmation_sent_at, id: :user_confirmation_sent_at %>
  </div>

  <div class="field">
    <%= form.label :last_passwd_reset_at %>
    <%= form.datetime_select :last_passwd_reset_at, id: :user_last_passwd_reset_at %>
  </div>

  <div class="field">
    <%= form.label :enabled %>
    <%= form.check_box :enabled, id: :user_enabled %>
  </div>

  <div class="field">
    <%= form.label :passwd_reset_token %>
    <%= form.text_field :passwd_reset_token, id: :user_passwd_reset_token %>
  </div>

  <div class="field">
    <%= form.label :passwd_reset_token_sent_at %>
