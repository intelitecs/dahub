<p id="notice"><%= notice %></p>

<h1>Bank Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Account number</th>
      <th>Bank code</th>
      <th>Agency code</th>
      <th>Iban code</th>
      <th>Rib code</th>
      <th>Owner</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.account_number %></td>
        <td><%= bank_account.bank_code %></td>
        <td><%= bank_account.agency_code %></td>
        <td><%= bank_account.iban_code %></td>
        <td><%= bank_account.rib_code %></td>
        <td><%= bank_account.owner %></td>
        <td><%= bank_account.company %></td>
        <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bank Account', new_bank_account_path %>
