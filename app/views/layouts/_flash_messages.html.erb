<div class="row">
  <div class="col-md-7 col-md-offset-2">
    <% flash.each do |type, msg| %>
      <div class="alert alert-<%= bootstrap_class_for(type) %> alert-dismissible fade in">
        <button class="close" data-dismiss="alert">x</button>
        <%= msg %>
      </div>
    <% end %>
  </div>
</div>