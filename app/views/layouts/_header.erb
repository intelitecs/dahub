<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Dahub Admin Server", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Accueil" , root_path%></li>
        <li><%= link_to "Aide", static_pages_help_path %></li>
        <% if logged_in? %>
        <% if superadmin_or_admin?(current_user) %>
           <li><%= link_to "Gestion des utilisateurs", users_path %></li>
           <li><%= link_to "Tableau de board", adminboard_path %></li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= current_user.username %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Paramètres", edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Déconnexion", logout_path, method: :delete %></li>
          </ul>
        </li>
        <% else %>
            <li><%= link_to "Connexion", login_path %> or</li>
            <li><%= link_to "Inscription", signup_path %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>

<%= render partial: 'layouts/flash_messages', flash: flash %>